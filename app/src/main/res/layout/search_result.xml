                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/res4_tv2"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true" />

                    <TextView
