                        android:ellipsize="end"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/res3_tv3"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
