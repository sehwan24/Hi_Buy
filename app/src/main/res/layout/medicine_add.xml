<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:text="제품추가" />




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="10">
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:text="제품이름"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editmName"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="20dp"
            android:hint="제품이름" />

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginBottom="20dp"
            android:text="1회 섭취량"
            android:textStyle="bold"/>
        <EditText
            android:layout_column="3"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"/>
        <Spinner
            android:layout_column="4"
            android:layout_row="2"
            android:id="@+id/Addspin1"/>

        <TextView
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginBottom="20dp"
            android:text="제품 섭취량"
            android:textStyle="bold"/>
        <EditText
            android:layout_column="3"
            android:layout_row="3"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal" />
        <Spinner
            android:layout_column="4"
            android:layout_row="3"
            android:id="@+id/Addspin2"/>

        <TextView
            android:layout_column="0"
            android:layout_row="4"
            android:layout_marginBottom="20dp"
            android:text="1일 섭취횟수"
            android:textStyle="bold"/>
        <EditText
            android:layout_column="3"
            android:layout_row="4"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal" />
        <TextView
            android:layout_column="4"
            android:layout_row="4"
            android:text="회"
            android:textStyle="bold"/>

        <TextView
            android:layout_column="0"
            android:layout_row="5"
            android:layout_marginBottom="20dp"
            android:text="섭취 시간"
            android:textStyle="bold"/>
        <EditText
            android:layout_column="3"
            android:layout_row="5"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_column="0"
            android:layout_row="6"
            android:layout_marginBottom="20dp"
            android:text="섭취 주기"
            android:textStyle="bold"/>
        <Button
            android:layout_column="3"
            android:layout_row="6"
            android:backgroundTint="#57BC1A"
            android:text="기간" />
        <Button
            android:layout_column="4"
            android:layout_row="6"
            android:backgroundTint="#57BC1A"
            android:text="반복" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_columnSpan="5"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="일"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="월"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="화"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="수"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="목"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="금"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/radio_button_selector"
                android:text="토"
                android:textColor="@drawable/radio_button_text_color_selector"
                android:gravity="center"
                android:layout_weight="1"/>
        </RadioGroup>

        <CheckBox
            android:layout_column="0"
            android:layout_row="8"
            android:layout_marginBottom="30dp"
            android:text="알림받기" />

        <Button
            android:id="@+id/btnAddFinish"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:backgroundTint="#57BC1A"
            android:text="완료" />

    </GridLayout>

</LinearLayout>